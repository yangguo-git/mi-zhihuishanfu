.inforsBox{
    width: 694rpx;
    height: 265rpx;
    background: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0px 6rpx 14rpx 0px rgba(107,111,114,0.16); 
    margin-left: 28rpx;
}
.inforsBox view{
    display: flex;
    align-items: center;
    padding: 22rpx 0rpx 22rpx 0rpx;
    border-bottom: 1rpx solid #E6E6E6;
    margin: 0px 24rpx;
}
.textStyle{
    width: 150rpx;
    font-size: 30rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    color: #272727;
}
.inforsBox input{
    flex: 1;
}
.btnBox{
    width: 100%;
    text-align: center;
    display: flex;
    justify-content: center;
}
.btnBox view{
    text-align: center;
    width: 439rpx;
    height: 84rpx;
    line-height: 84rpx;
    background: linear-gradient(270deg,#2181ff, #2d7aff);
    border-radius: 10rpx;
    color: white;
    margin-top: 212rpx;
}
.warn{
    height: 37rpx;
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    color: #6d6d6d;
    margin-left: 28rpx;
    margin-bottom: 24rpx;
    margin-top: 24rpx;
    /* text-align: center; */
}
.grayStyle{
    color: #CCCCCC;
    font-size: 30rpx;
}
.idCard{
    color: #272727;
}
.idnumber{
    border-bottom: none !important;
}
.topPart{
    text-align: center;
    padding-top: 82rpx;
    margin-bottom: 66rpx;
}
.topPart image{
    width: 256rpx;
    height: 291rpx;
}
/* 禁用 */
.disabClass {
    pointer-events: none;
}
.btnBox .btnName{
    /* background: #f7f7f7; */
    pointer-events: none;
}
.btnBox button{
    text-align: center;
    width: 439rpx;
    height: 84rpx;
    line-height: 84rpx;
    background: linear-gradient(270deg,#2181ff, #2d7aff);
    border-radius: 10rpx;
    color: white;
    margin-top: 212rpx;
}